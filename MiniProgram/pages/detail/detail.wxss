/* pages/detail/detail.wxss */

.detail-page {
  background: #ececec;
  height: 100%;
}

/* 图片 */

.photos-wrap {
  box-sizing: border-box;
  padding: 15rpx 15rpx 15rpx 20rpx;
  width: 100%;
  white-space: nowrap;
  margin-bottom: 28rpx;
  background: #fff;
}

.photos-wrap image {
  width: 90rpx;
  height: 90rpx;
  margin-left: 15rpx;
}

/* 编辑框 */

.edit-content {
  position: relative;
  width: 100%;
  height: 400rpx;
  background: #fff;
  margin-bottom: 28rpx;
  font-size: 30rpx;
  padding: 30rpx 30rpx 30rpx 20rpx;
  box-sizing: border-box;
}

textarea {
  width: 100%;
  min-height: 85%;
  height: auto;
}

.edit-content .tips {
  color: #999;
  text-align: left;
}

/* 位置 */

.location-wrap {
  position: relative;
  height: 90rpx;
  background: #fff;
  border-bottom: 1px solid #ececec;
  font-size: 30rpx;
}

.location {
  box-sizing: border-box;
  padding-left: 74rpx;
  width: 100%;
  height: 100%;
  line-height: 90rpx;
}

.icon-location {
  position: absolute;
  top: 34rpx;
  left: 35rpx;
  font-size: 25rpx;
  color: #666;
}

/* 发布按钮 */

.btn-pub {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #7aa5b1;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 26rpx;
}
